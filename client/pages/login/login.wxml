  <view class="login-from">
 
    <!--账号-->
    <view class="inputView">
    <view style='width:40%'>
      <image class="nameImage" src="../images/identity.png"></image>
      <label class="loginLab">账号</label>
    </view>
    <view style='width:60%'>
      <input class="inputText" placeholder="请输入账号" bindinput="phoneInput" />
    </view>
    </view>
    <view class="line"></view>
 
    <!--密码-->
    <view class="inputView">
    <view style='width:40%'>
      <image class="keyImage" src="../images/lock.png"></image>
      <label class="loginLab">密码</label>
    </view>
    <view style='width:60%'>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>
     </view>
 
    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn"  class="btn"  bindtap="login"  mode="widthFix">登录</button>
    </view>
  </view>

